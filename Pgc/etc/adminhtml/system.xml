<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="pgc_general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Pgc</label>

                <field id="username" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                       showInStore="0">
                    <label>Config Http User</label>
                    <config_path>pgc/general/username</config_path>
                </field>
                <field id="password" translate="label" type="obscure" sortOrder="20" showInDefault="1" showInWebsite="1"
                       showInStore="0">
                    <label>Config Http Password</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <config_path>pgc/general/password</config_path>
                </field>
                <!-- <field id="host" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1"
                       showInStore="0">
                    <label>Host</label>
                    <config_path>pgc/general/host</config_path>
                    <comment>Secure URL i.e, URL must have https</comment>
                </field> -->
                <field id="sandbox" translate="label" type="select" sortOrder="40" showInDefault="1"
                        showInWebsite="1" showInStore="0">
                    <label>Sandbox</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <config_path>pgc/general/sandbox</config_path>
                </field>
                <group id="pgc_cc" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>CreditCard</label>

                    <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1"
                           showInWebsite="1" showInStore="0">
                        <label>Enable Card Payments</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <config_path>payment/pgc_creditcard/active</config_path>
                    </field>
                    <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1"
                           showInStore="1">
                        <label>Title</label>
                        <config_path>payment/pgc_creditcard/title</config_path>
                    </field>
                    <field id="debug" translate="label" type="select" sortOrder="85" showInDefault="1" showInWebsite="1"
                           showInStore="0">
                        <label>Debug</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <config_path>payment/pgc_creditcard/debug</config_path>
                    </field>
                    <field id="payment_action" translate="label" type="select" sortOrder="110" showInDefault="1"
                           showInWebsite="1" showInStore="0">
                        <label>Payment Action</label>
                        <source_model>Pgc\Pgc\Model\Adminhtml\Source\PaymentAction</source_model>
                        <config_path>payment/pgc_creditcard/payment_action</config_path>
                    </field>
                    <field id="api_key" translate="label" type="obscure" sortOrder="30" showInDefault="1"
                           showInWebsite="1"
                           showInStore="0">
                        <label>Api Key</label>
                        <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                        <config_path>payment/pgc_creditcard/api_key</config_path>
                    </field>
                    <field id="shared_secret" translate="label" type="obscure" sortOrder="40" showInDefault="1"
                           showInWebsite="1" showInStore="0">
                        <label>Merchant Secret Key</label>
                        <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                        <config_path>payment/pgc_creditcard/shared_secret</config_path>
                    </field>
                    <field id="seamless" translate="label" type="select" sortOrder="50" showInDefault="1"
                           showInWebsite="1" showInStore="0">
                        <label>Seamless Integration</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <config_path>payment/pgc_creditcard/seamless</config_path>
                    </field>
                    <field id="integration_key" translate="label" type="obscure" sortOrder="60" showInDefault="1"
                           showInWebsite="1" showInStore="0">
                        <label>Integration Key</label>
                        <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                        <config_path>payment/pgc_creditcard/integration_key</config_path>
                    </field>
                    <field id="sort_order" translate="label" type="text" sortOrder="70" showInDefault="1"
                           showInWebsite="1" showInStore="0">
                        <label>Sort Order</label>
                        <config_path>payment/pgc_creditcard/sort_order</config_path>
                    </field>
                    <field id="use_3dsecure" translate="label" type="select" sortOrder="87" showInDefault="1"
                           showInWebsite="1" showInStore="0">
                        <label>3D Secure Verification</label>
                        <source_model>Pgc\Pgc\Model\Adminhtml\Source\ThreeDSecure</source_model>
                        <comment>Disable only if your payment gateway support this</comment>
                        <config_path>payment/pgc_creditcard/use_3dsecure</config_path>
                    </field>
                    <field id="signature" translate="label" type="select" sortOrder="120" showInDefault="1"
                           showInWebsite="1" showInStore="0">
                        <label>Enable Signature</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <config_path>payment/pgc_creditcard/signature</config_path>
                    </field>
                </group>
                <group id="pgc_cc_vault" translate="label" type="text" sortOrder="50" showInDefault="1"
                       showInWebsite="1"
                       showInStore="0">
                    <label>Vault CreditCard</label>
                    <field id="pgc_cc_vault_active" translate="label" type="select" sortOrder="13" showInDefault="1"
                           showInWebsite="1" showInStore="0">
                        <label>Enable Vault for Card Payments</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <config_path>payment/pgc_cc_vault/active</config_path>
                    </field>
                </group>
            </group>
        </section>
    </system>
</config>
